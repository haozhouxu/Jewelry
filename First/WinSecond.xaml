<Window x:Class="First.WinSecond"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:shell="clr-namespace:Microsoft.Windows.Shell;assembly=Microsoft.Windows.Shell"
        xmlns:local="clr-namespace:First"
        mc:Ignorable="d"
        Icon="Resources/Images/Login.ico"
        Title="" Height="300" Width="300">
    <shell:WindowChrome.WindowChrome>
        <shell:WindowChrome CornerRadius="0" GlassFrameThickness="50" UseAeroCaptionButtons="False" />
    </shell:WindowChrome.WindowChrome>
    <Window.CommandBindings>
        <CommandBinding Command="Open" Executed="Open_Executed"/>
        <CommandBinding Command="shell:SystemCommands.MinimizeWindowCommand" Executed="OnMinimizedWindow"/>
        <CommandBinding Command="shell:SystemCommands.MaximizeWindowCommand" Executed="OnMaximizedWindow"/>
        <CommandBinding Command="shell:SystemCommands.CloseWindowCommand" Executed="OnCloseWindow"/>
        <CommandBinding Command="shell:SystemCommands.RestoreWindowCommand" Executed="OnRestoreWindow"/>
    </Window.CommandBindings>
