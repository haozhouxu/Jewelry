        <Thumb x:Name="PART_SizeSE" DragDelta="OnDragDelta"  Style="{StaticResource TransparentWindowResizeThumbStyle}" Cursor="SizeNWSE" Width="8" Height="8" VerticalAlignment="Bottom" HorizontalAlignment="Right" />
