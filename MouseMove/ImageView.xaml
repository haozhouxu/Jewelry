        <Button HorizontalAlignment="Right" VerticalAlignment="Top" x:Name="btnClose" Click="btnClose_Click" Width="30" Height="30" Style="{DynamicResource ButtonStyle1}" Margin="0,5,5,0"/>

        <Border/>
    </Grid>
</Window>
