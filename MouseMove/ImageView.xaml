        <Thumb x:Name="PART_SizeW" DragDelta="OnDragDelta"  Style="{StaticResource TransparentWindowResizeThumbStyle}" Cursor="SizeWE" Width="8" HorizontalAlignment="Left" Margin="0,8,0,8" />
