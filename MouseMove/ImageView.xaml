        <Thumb x:Name="PART_SizeSW" DragDelta="OnDragDelta"  Style="{StaticResource TransparentWindowResizeThumbStyle}" Cursor="SizeNESW" Width="8" Height="8" VerticalAlignment="Bottom" HorizontalAlignment="Left" />
